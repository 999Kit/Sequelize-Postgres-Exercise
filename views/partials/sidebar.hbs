<div class="col-lg-4 col-md-5">
    <div class="blog__sidebar">
        <div class="blog__sidebar__search">
            <form action="/blogs" onsubmit="return validateSearch()">
                <input type="text" placeholder="Search..." name="search_value"/>
                <button type="submit"><span class="icon_search"></span></button>
            </form>
        </div>
        <div class="blog__sidebar__item">
            <h4>Categories</h4>
            <ul>
                <li><a href="/blogs">All</a></li>
                {{#each categories}}
                <li><a href="/blogs?category={{name}}">{{name}} ({{len}})</a></li>
                {{/each}}
            </ul>
        </div>

        <div class="blog__sidebar__item">
            <h4>Search By Tags</h4>
            <div class="blog__sidebar__item__tags">
                {{#each tags}}
                <a href="/blogs?tag={{name}}">{{name}}</a>
                {{/each}}
            </div>
        </div>
    </div>
</div>
<script>
    function validateSearch() {
        const search_value = document.getElementsByName('search_value')[0].value;
        if (search_value === undefined || search_value.trim() === '') return false;
        return true;
    }
</script>